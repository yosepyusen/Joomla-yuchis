{
	"class":"column-settings",
	"title":"column-settings",
	"rows":[
		{
			"cols":[
				{
					"class":"col-12",
					"controls":{
						"margin":{
							"type":"spacing-settings",
							"hint":"layout-column-margin-hint",
							"label":"margin"
						}
					}
				},
				{
					"class":"col-12 separator-after",
					"controls":{
						"padding":{
							"type":"spacing-settings",
							"hint":"layout-column-padding-hint",
							"label":"padding"
						}
					}
				},
				{
					"class":"col-12 separator-after display-in-layout",
					"controls":{
						"visible_in":{
							"type":"checkbox",
							"hint":"layout-column-display-in-layouts-hint",
							"check-none":false,
							"label":"Display in layouts",
							"options":[
								{
									"value":"lg",
									"label":"Desktop"
								},
								{
									"value":"md",
									"label":"Laptop"
								},
								{
									"value":"sm",
									"label":"Tablet"
								},
								{
									"value":"xs",
									"label":"Smartphone"
								}
							],
							"default":[
								"lg",
								"md",
								"sm",
								"xs"
							]
						}
					}
				},
				{
					"class":"col-12",
					"controls":{
						"class":{
							"type":"text",
							"hint":"layout-column-custom-classes-hint",
							"label":"custom-classes"
						}
					}
				}
			]
		}
	],
	"hidden-in-panel":true
}
