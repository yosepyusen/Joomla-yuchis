{
	"class":"container-settings",
	"title":"container-settings",
	"rows":[
		{
			"class":"separator-after",
			"cols":[
				{
					"class":"col-12",
					"controls":{
						"full":{
							"type":"checkbox",
							"value":1,
							"hint":"megamenu-fixed-width-hint",
							"label":"fixed-width"
						}
					}
				},
				{
					"class":"col-12",
					"controls":{
						"width":{
							"type":"text",
							"hint":"megamenu-submenu-width-hint",
							"label":"submenu-width",
							"suffix":"px",
							"default":600
						}
					},
					"requires":{
						"full":1
					}
				},
				{
					"class":"col-12",
					"controls":{
						"align":{
							"type":"select",
							"hint":"megamenu-submenu-align-hint",
							"label":"submenu-align",
							"options":[
								{
									"label":"left",
									"value":"left"
								},
								{
									"label":"center",
									"value":"center"
								},
								{
									"label":"right",
									"value":"right"
								}
							]
						}
					},
					"requires":{
						"full":1
					}
				}
			]
		},
		{
			"class":"separator-after",
			"cols":[
				{
					"class":"col-12",
					"controls":{
						"padding":{
							"type":"spacing-settings",
							"hint":"megamenu-padding-hint",
							"label":"padding"
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-12",
					"controls":{
						"backgroundColor":{
							"type":"color-picker",
							"hint":"megamenu-background-color-hint",
							"label":"background-color",
							"format":"rgb"
						}
					}
				},
				{
					"class":"col-12",
					"controls":{
						"backgroundImage":{
							"type":"image-selector",
							"hint":"megamenu-background-image-hint",
							"label":"background-image"
						}
					}
				},
				{
					"class":"col-12",
					"controls":{
						"backgroundImageSettings":{
							"type":"background-image-settings",
							"hint":"megamenu-background-image-settings-hint",
							"label":"background-image-settings"
						}
					}
				},
				{
					"class":"col-12",
					"controls":{
						"border":{
							"type":"border-settings",
							"hint":"megamenu-border-hint",
							"label":"border"
						}
					}
				}
			]
		}
	]
}
