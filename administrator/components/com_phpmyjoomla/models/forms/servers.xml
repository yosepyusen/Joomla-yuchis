<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_NAME"
            description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_NAME" 
                
                
                 required="true"  /> 

       <field name="username" type="text"
                
            label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_USERNAME"
            description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_USERNAME" 
                
                
                 required="true"  /> 

       <field name="host" type="text"
                
            label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_HOST"
            description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_HOST" 
                
                
                 required="true"  /> 

       <field name="password" type="text"
                
            label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_PASSWORD"
            description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_PASSWORD" />

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
             <option value="1">JPUBLISHED</option>
             <option value="0">JUNPUBLISHED</option>
             <option value="2">JARCHIVED</option>
             <option value="-2">JTRASHED</option>
    </field> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_phpmyjoomla"
                            section="servers"
                        />

	</fieldset>

</form>
